<%= stylesheet_link_tag "user", :media => "all" %>
<div class="contents clearfix">
  <div class="left-content">
    <a href="">
      <div class="user_image"><%= image_tag current_user.image %></div>
    </a>
  </div>
</div>
<div class="contents clearfix">
  <div class="middle-content">
    <h1>コメント一覧<h1/>
  </div>
</div>
  <div class="contents clearfix">
    <div class="right-content">
    <span><%= current_user.nickname %>さんの投稿一覧</span>
    <% if @posts %>
    <% @posts.each do |post| %>
      <%= render partial: "posts/post", locals: { post: post } %>
    <% end %>
        <%= paginate(@posts) %>
    <% end %>
  </div>
</div>



</div>


