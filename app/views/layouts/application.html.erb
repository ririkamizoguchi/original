<!DOCTYPE html>
<%= stylesheet_link_tag 'application', media: 'all' %>
<html>
  <head>
    <title>JIMONAVI</title>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">JIMONAVI</a></h1>
          <% if user_signed_in? %>
            <div class align="right"="user_nav grid-6">
                <ul class="user__info">
                  <li>
                    <a href="/users/<%= current_user.id %>">マイページ</a>&ensp;
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                  </li>
                </ul>
            </div>
          <% else %>
            <div class align="right"="grid-6">
              <%= link_to "ログイン", new_user_session_path, :class => 'post' %>
              <%= link_to "新規登録", new_user_registration_path, :class => 'post' %>
            </div>
          <% end %>
      </div>
    </header>

    <%= yield %>

    <footer>
      <p>
      </p>
    </footer>
  </body>
</html>
